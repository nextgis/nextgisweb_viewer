root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120
spaces_around_brackets = true
quote_type = single
end_of_line = lf

[*{.scss,.less}]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2
